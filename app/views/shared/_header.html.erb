<header class="bg-gray-100 shadow p-4 flex items-center justify-between">
  <div class="flex items-center space-x-2">
    <h1 class="text-lg font-semibold">Slack Bot</h1>
  </div>

  <% if user_signed_in? %>
    <div class="flex items-center space-x-6">
      <p class="text-gray-700">Welcome, <%= current_user.slack_user_name || current_user.email %>!</p>
      <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: "px-3 py-1 bg-red-500 text-white rounded hover:bg-red-600" %>
    </div>
  <% else %>
    <%= link_to 'Sign in with Slack', slack_user_auth_start_path, class: "px-3 py-1 bg-blue-500 text-white rounded hover:bg-blue-600" %>
  <% end %>
</header>

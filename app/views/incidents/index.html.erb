<p class="text-green-600"><%= notice %></p>

<% content_for :title, "Incidents" %>




<div class="max-w-3xl mx-auto p-4">
  <h1 class="text-2xl font-bold mb-4">Incidents</h1>

  <turbo-frame id="incidents" class="space-y-4">
    <div class="mb-4 flex gap-4">
      <% new_direction = params[:direction] == "asc" ? "desc" : "asc" %>

      <%= link_to "Sort by Created At (#{params[:direction] == 'asc' ? 'New to Old' : 'Old to New'})",
        incidents_path(sort: "created_at", direction: new_direction),
        data: { turbo_frame: "incidents" },
        class: "text-blue-600 hover:underline" %>

      <%= link_to "Sort Alphabetically (#{params[:direction] == 'asc' ? 'Z-A' : 'A-Z'})",
        incidents_path(sort: "title", direction: new_direction),
        data: { turbo_frame: "incidents" },
        class: "text-blue-600 hover:underline" %>
    </div>


    <% @incidents.each do |incident| %>
      <%= render incident %>
    <% end %>
  </turbo-frame>

  <div class="mt-6">
    <%= link_to "New Incident", new_incident_path, class: "inline-block bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition" %>
  </div>
</div>

<turbo-stream from="incidents"></turbo-stream>

<div class="flex flex-col justify-center p-6 bg-gray-50">
  <div class="max-w-md w-full mx-auto bg-white border border-gray-300 rounded-2xl p-8 shadow-lg">
    <div class="text-center mb-10">
      <a href="javascript:void(0)">
      </a>
    </div>

    <h2 class="text-2xl font-semibold text-center mb-8">Log in</h2>

    <div class="mb-6">
      <%= link_to "Sign in with Slack", slack_user_auth_start_path,
          class: "block w-full text-center py-3 px-4 mb-6 bg-blue-600 text-white rounded-md hover:bg-blue-700" %>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="space-y-6">
        <div>
          <%= f.label :email, class: "block text-gray-900 text-sm font-medium mb-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "w-full px-4 py-3 text-gray-900 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>

        <div>
          <%= f.label :password, class: "block text-gray-900 text-sm font-medium mb-2" %>
          <%= f.password_field :password, autocomplete: "current-password",
              class: "w-full px-4 py-3 text-gray-900 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center">
            <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" %>
            <%= f.label :remember_me, class: "ml-3 block text-sm text-gray-600" %>
          </div>
        <% end %>

        <div>
          <%= f.submit "Log in",
                class: "w-full py-3 px-4 text-white bg-green-600 rounded-md font-semibold hover:bg-green-700 cursor-pointer" %>
        </div>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
